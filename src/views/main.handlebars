<h1>Bienvenido a GameShop {{user.first_name}} {{user.last_name}}</h1>
<hr>

<div class="navbar">
    <a href="/products" class="logo">GameShop</a>
    <div class="nav-links">
        <a href="/carts/{{cart}}" class="nav-link">Carrito</a>
        <a href="/admin/users" class="nav-link">Admin Usuarios</a>
        <a href="/create/product" class="nav-link">Crear Producto</a>
        <a href="/api/sessions/logout" class="nav-link">Cerrar sesión</a>
    </div>
</div>

<div>
    <h2>Datos de Usuario</h2>
    <div class="userData">
        <p><b>Usuario:</b> {{user.full_name}}</p>
        <p><b>Email:</b> {{user.email}}</p>
        <p><b>Rol:</b> {{user.role}}</p>
    </div>
</div>

<div class="productDiv">
    <h1>Lista de Productos</h1>
    <div class="productBox">
        <ul class="ulProduct">
            {{#each products}}
                <li class="liProduct">
                    <div class="productProperties">
                        <h2>{{title}}</h2>
                        <p>Precio: ${{price}}</p>
                        <p>Categoría: {{category}}</p>
                    </div>
                    <div class="linksProduct">
                        <button class="addToCart" data-product-id="{{_id}}">Agregar al carrito</button>
                        <a href="/products/{{_id}}" class="product-details-link">Ver detalles</a>
                        <button class="deleteProductButton" data-product-id="{{_id}}">Eliminar</button>
                    </div>
                </li>
            {{/each}}
        </ul>
    </div>

    <div class="pagination">
        {{#if hasPrevPage}}
            <a href="?page={{prevPage}}&limit={{limit}}">Página anterior</a>
        {{/if}}
        <span>Página {{page}} de {{totalPages}}</span>
        {{#if hasNextPage}}
            <a href="?page={{nextPage}}&limit={{limit}}">Página siguiente</a>
        {{/if}}
    </div>
</div>

<script type="module" src="/js/index.js"></script>
